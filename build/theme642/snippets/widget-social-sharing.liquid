<div class="social_sharing_block">
	{% if settings.sharing_fb %}
		<a target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_link }}" title="Share">
			<i class="fa fa-facebook" aria-hidden="true"></i>
		</a>
	{% endif %}

	{% if settings.sharing_tw %}
		<a target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_link }}" title="Share">
			<i class="fa fa-twitter" aria-hidden="true"></i>
		</a>
	{% endif %}

	{% if settings.sharing_gplus %}
		<a target="_blank" href="//plus.google.com/share?url={{ shop.url | append: share_link }}" title="Share">
			<i class="fa fa-google-plus" aria-hidden="true"></i>
		</a>
	{% endif %}

	{% if settings.sharing_pin %}
		<a target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_link }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" title="Share">
			<i class="fa fa-pinterest" aria-hidden="true"></i>
		</a>
	{% endif %}
</div>