<div class="template_reset_account">
	<div class="container">
		<h1 class="page_heading">{{ page_title }}</h1>

		<div id="account_section__reset-account" class="account_section">
			<h4>{{ 'customer.reset_account.title' | t }} {{ email }}</h4>
			
			<div class="form-horizontal">
				{% form 'reset_customer_password' %}
					{{ form.errors | default_errors }}

					<div class="clearfix form-group">
						<label for="password_2" class="col-sm-4">{{ 'customer.reset_account.password' | t }}</label>
						<div class="col-sm-4">
							<input type="password" name="customer[password]" id="password_1">
						</div>
					</div>

					<div class="clearfix form-group">
						<label for="password_2" class="col-sm-4">{{ 'customer.reset_account.confirm_password' | t }}</label>
						<div class="col-sm-4">
							<input type="password" name="customer[password_confirmation]" id="password_1">
						</div>
					</div>

					<div class="form-group">
						<div class="col-sm-offset-4 col-sm-4">
							<button type="submit" class="btn">{{ 'customer.reset_account.submit' | t }}</button>
						</div>
					</div>
				{% endform %}
			</div>
		</div>
	</div>
</div>

<script>
	theme.loginForms = true;
</script>