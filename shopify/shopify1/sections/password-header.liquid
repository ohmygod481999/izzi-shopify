{%- if section.settings.logo -%}
  <div class="password__logo">
    <img src="{{ section.settings.logo | img_url: '500x500' }}"
      alt="{{ section.settings.logo.alt | default: shop.name | escape }}"
      style="max-width: {{ section.settings.logo_max_width }}px">
  </div>
{%- else -%}
  <h1 class="password__heading">{{ shop.name }}</h1>
{%- endif -%}

<span class="password__heading password__heading--sub">{{ section.settings.header | escape }}</span>

